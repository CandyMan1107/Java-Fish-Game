package breadTycoon;

import java.awt.*;
import java.awt.event.*;
//import java.util.Timer;
//import java.util.TimerTask;
/*import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.ItemEvent;
import java.awt.event.ItemListener;*/

import javax.swing.*;
/*import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;*/
//import javax.xml.stream.events.Comment;

//import breadTycoon.Tycoon.job0;

public class gameOver{
	Container contentPane;
	JFrame gameOverFrame;
	JPanel imageView;
	
	
	
	gameOver () {	// 생성자
		
		Dimension frameSize = gameOverFrame.getSize();	// frame 크기 구하기
		Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();	// 내 모니터 크기 구하기
		gameOverFrame.setLocation((screenSize.width - frameSize.width)/2, (screenSize.height - frameSize.height)/2);


		//contentPane = getContentPane();
		//contentPane.setLayout(new GridLayout(0, 1));
		
		gameOverFrame = new JFrame();
		gameOverFrame.setTitle("붕어빵타이쿤");
		gameOverFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);	// X버튼 클릭시 윈도우창(프레임)이 꺼지도록 설정
		//gameOverFrame.setSize(709, 238);
		gameOverFrame.setLocation(600,500);
		gameOverFrame.setLayout(new GridLayout(0, 1));
	
		imageView = new JPanel();
		
		//contentPane.add(imageView);
		gameOverFrame.add(imageView);
		
		ImageIcon title = new ImageIcon("img/game_over.png");
		JLabel label = new JLabel(title);
		
		imageView.add(label);
		
		JButton btn0 = new JButton("REPLAY");
		btn0.setBackground(Color.WHITE);
		btn0.setFont(new Font("3D", Font.CENTER_BASELINE, 30));
		//System.out.println("getFont : " + btn0.getFont());
		
		JButton btn1 = new JButton("EXIT");
		btn1.setBackground(Color.WHITE);
		btn1.setFont(new Font("3D", Font.CENTER_BASELINE, 30));
		//System.out.println("getFont : " + btn1.getFont());
		
		imageView.add(btn0, BorderLayout.SOUTH);	// button을 남쪽으로 가져다 놓자
		imageView.add(btn1, BorderLayout.SOUTH);
		
		gameOverFrame.setVisible(true);
		
		btn0.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				new Tycoon();
				gameOverFrame.dispose();
			}
		});
		
		btn1.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				System.exit(0);
			}
		});
		
		
		
		
		//setVisible(true);
	}
}
