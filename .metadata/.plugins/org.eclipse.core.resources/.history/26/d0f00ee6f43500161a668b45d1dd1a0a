package breadTycoon;

import java.awt.*; 
import java.awt.event.*; 
import javax.swing.*; 
import javax.swing.event.*; 

class JProgressBarTest extends JPanel { 
      JProgressBar p; 
      Label status; 

      public JProgressBarTest() { 
              setLayout(new BorderLayout()); 
              p = new JProgressBar(); 
              p.setMinimum(0); 
              p.setMaximum(60); 
              p.setValue(0); 

              //status = new Label(""); 

              add(p,"Center"); 
              //add(status, "South"); 
      } 

      public void go() { 
              try        { 
                      for(int i=60; i>0; i--) { 
                              p.setValue(i); 
                              Thread.sleep(1000); 
                              //status.setText(i+"√ "); 
                      } 
              } 
              catch (InterruptedException e) {} 
      } 

      public Dimension getPreferredSize() { 
              return new Dimension(300, 80); 
      } 

